            android:layout_width="match_parent"
            android:layout_height="3.0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="7dp"
            android:background="#d1b9b9"
            android:clickable="false"
            android:text="Button" />
        <LinearLayout
