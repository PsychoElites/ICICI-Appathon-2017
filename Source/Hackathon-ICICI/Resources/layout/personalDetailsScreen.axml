                android:layout_height="21.3dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp" />
            <EditText
                android:id="@+id/personalAge"
                android:background="@drawable/roundedEditText"
                android:text="69"
                android:textColor="#000000"
